<?xml version="1.0" encoding="utf-8"?>
<!--
  Solution-level NuGet configuration.
  Declares nuget.org as the only package source and maps all packages to it,
  so every dependency (EF Core, xUnit, test SDK, etc.) resolves correctly
  even when a global NuGet.Config has stale or conflicting source mappings.
-->
<configuration>
  <packageSources>
    <clear />
    <add key="Nuget Official" value="https://api.nuget.org/v3/index.json" />
  </packageSources>
  <packageSourceMapping>
    <packageSource key="Nuget Official">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
